<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <hello.com.aramis.opengl.december.views.DouyinView
        android:id="@+id/douyinView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/text_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_dy_record"
        android:gravity="center"
        android:text="按住拍"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_above="@id/text_record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_dy_speed_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_speed_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:text="极慢"
            android:textColor="#333" />

        <TextView
            android:id="@+id/text_speed_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="慢"
            android:textColor="#333" />

        <TextView
            android:id="@+id/text_speed_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_dy_speed_white"
            android:gravity="center"
            android:text="正常"
            android:textColor="#333" />

        <TextView
            android:id="@+id/text_speed_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="快"
            android:textColor="#333" />

        <TextView
            android:id="@+id/text_speed_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="极快"
            android:textColor="#333" />
    </LinearLayout>
</RelativeLayout>