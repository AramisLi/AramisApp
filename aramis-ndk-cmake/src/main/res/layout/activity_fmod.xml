<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="录音文件"
        android:textColor="#555" />

    <TextView
        android:background="#f5f5f5"
        android:id="@+id/text_fmod_file"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="#555" />

    <TextView
        android:id="@+id/text_fmod_record"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_normal"
        android:gravity="center"
        android:text="Android 录音"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/text_fmod_play_android"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_btn_normal"
        android:gravity="center"
        android:text="Android 播放"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/text_fmod_play_fmod"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_btn_normal"
        android:gravity="center"
        android:text="Fmod 播放"
        android:textColor="#fff" />


    <hello.com.aramis.ndk.cmake.widget.RecordButton
        android:id="@+id/record_view"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_btn_normal"
        android:gravity="center"
        android:text="record view"
        android:textColor="#fff" />
</LinearLayout>