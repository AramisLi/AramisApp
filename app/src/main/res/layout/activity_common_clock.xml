<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aramis.aramisapp.widget.ClockView
        android:id="@+id/clockView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <com.aramis.aramisapp.widget.FerrisWheelView
        android:id="@+id/ferrisView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/clockView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <ru.github.igla.ferriswheel.FerrisWheelView
        android:id="@+id/ferrisView2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_below="@id/ferrisView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="start" />
</RelativeLayout>