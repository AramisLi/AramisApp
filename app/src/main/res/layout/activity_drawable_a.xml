<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/drawable_test" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/drawable_layer_test"
        android:gravity="bottom"
        android:paddingLeft="5dp"
        android:text="我怎么这么好看" />

    <ImageView
        android:id="@+id/test_level"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:src="@drawable/drawable_level_test" />

    <TextView
        android:id="@+id/test_transition"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="点我 TransitionDrawable" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#343">

        <TextView
            android:id="@+id/test_inset"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/drawable_inset_test"
            android:gravity="center"
            android:text="InsetDrawable" />
    </FrameLayout>

    <TextView
        android:id="@+id/test_scale"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/drawable_scale_test"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="ScaleDrawable" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ClipDrawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/test_clip1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_clip_test" />

        <ImageView
            android:id="@+id/test_clip2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_clip_test" />

        <ImageView
            android:id="@+id/test_clip3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_clip_test" />
        <ImageView
            android:background="#adc"
            android:id="@+id/test_clip4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/liuyan" />
    </LinearLayout>
</LinearLayout>